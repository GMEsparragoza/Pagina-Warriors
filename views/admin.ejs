                        <input class="field-posts" type="text" name="horario" placeholder="Horario:">
                        <input type="submit" class="submit-btn" value="Enviar">
                    </form>
                </div>
            </div>
        </div>
        <div class="modificarPostulaciones">
            <div class="container">
                <div class="form-box">
                    <div class="titulo-form">
                        <h1>Modificar Postulaciones</h1>
                    </div>
                    <div class="button-box">
                        <div id="btn-Modificar"></div>
                        <input type="button" value="Players" class="toggle-btn" id="butPlayerModificar" onclick="toggleFormModificar('Player')">
                        <input type="button" value="Staff" class="toggle-btn" id="butStaffModificar" onclick="toggleFormModificar('Staff')">
                    </div>
                    <form id="ModificarPlayerPost" class="group-posts active" action="/ModificarPostPlayers" method="POST">
                        <input class="field-posts"type="number" name="idPost" placeholder="ID Postulacion:">

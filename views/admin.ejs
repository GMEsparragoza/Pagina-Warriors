                        <input class="field-posts" type="text" name="experiencia" placeholder="Experiencia (1-Si/0-No):">
                        <input class="field-posts" type="text" name="rol" placeholder="Rol:">
                        <input class="field-posts" type="text" name="horario" placeholder="Horario:">
                        <input type="submit" class="submit-btn" value="Enviar">
                    </form>
                    <form id="ModificarStaffPost" class="group-posts" action="/ModificarPostStaff" method="POST">
                        <input class="field-posts"type="number" name="idPost" placeholder="ID Postulacion:">
                        <input class="field-posts" type="number" name="edadMinima" placeholder="Edad Minima:">
                        <input class="field-posts" type="text" name="experiencia" placeholder="Experiencia (1-Si/0-No):">
                        <input class="field-posts" type="text" name="rol" placeholder="Rol:">
                        <input class="field-posts" type="text" name="horario" placeholder="Horario:">
                        <input type="submit" class="submit-btn" value="Enviar">
                    </form>
                </div>
            </div>
        </div>
        <div class="eliminarPostulaciones">
            <div class="container">
                <div class="form-box">
                    <div class="titulo-form">
                        <h1>Eliminar Postulaciones</h1>
                    </div>
                    <div class="button-box">
                        <div id="btn-Eliminar"></div>
                        <input type="button" value="Players" class="toggle-btn" id="butPlayerEliminar" onclick="toggleFormEliminar('Player')">
                        <input type="button" value="Staff" class="toggle-btn" id="butStaffEliminar" onclick="toggleFormEliminar('Staff')">
                    </div>
                    <form id="EliminarPlayerPost" class="group-posts active" action="/EliminarPostPlayers" method="POST">
                        <input class="field-posts"type="number" name="idPost" placeholder="ID Postulacion:">
                        <input type="submit" class="submit-btn" value="Enviar">
                    </form>
                    <form id="EliminarStaffPost" class="group-posts" action="/EliminarPostStaff" method="POST">
                        <input class="field-posts"type="number" name="idPost" placeholder="ID Postulacion:">
                        <input type="submit" class="submit-btn" value="Enviar">
                    </form>
                </div>
            </div>
        </div>
    </section>
    
</body>
<script src="/scripts/admin.js"></script>
<script src="/scripts/adminPosts.js"></script>
</html>